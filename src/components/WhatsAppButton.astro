---
import siteData from '../data/site-data.json';
const { whatsapp } = siteData;
---

<a 
  href={whatsapp}
  target="_blank"
  rel="noopener noreferrer"
  class="fixed bottom-6 right-6 z-50 w-16 h-16 bg-[#25d366] rounded-full flex items-center justify-center shadow-lg shadow-green-500/30 hover:scale-110 hover:shadow-xl transition-transform duration-200 will-change-transform"
  aria-label="Contactar por WhatsApp"
>
  <i class="fab fa-whatsapp text-white text-3xl"></i>
</a>
