---
import "../styles/global.css";
import siteData from "../data/site-data.json";

interface Props {
  title: string;
  description?: string;
  image?: string;
  canonicalURL?: string;
  type?: "website" | "article";
}

const {
  title,
  description = "Alquiler de camionetas 4x4, Toyota Hilux y Fortuner en Juliaca y Puno. Servicio para minería, construcción y turismo. Precios competitivos, vehículos nuevos y seguros. GAIVANS KAMACHO EIRL ☎ +51 995010281",
  image = siteData.empresa.seo.ogImage,
  canonicalURL = siteData.empresa.url,
  type = "website",
} = Astro.props;

const { empresa, contacto } = siteData;
const siteUrl = empresa.url;
const fullImage = image.startsWith("http") ? image : `${siteUrl}${image}`;

// Detectar si estamos en Railway para bloquear indexación
const currentHost = Astro.url.hostname;
const isRailway = currentHost.includes("railway.app");
const robotsContent = isRailway
  ? "noindex, nofollow"
  : "index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1";

// Schema.org JSON-LD - LocalBusiness / AutoRental
const schemaLocalBusiness = {
  "@context": "https://schema.org",
  "@type": "AutoRental",
  "@id": `${siteUrl}/#business`,
  name: empresa.nombre,
  image: [
    `${siteUrl}${empresa.logo}`,
    `${siteUrl}/images/carrusel/slide1.jpg`,
    `${siteUrl}/images/carrusel/slide2.jpg`,
    `${siteUrl}/images/carrusel/slide4.jpg`,
  ],
  description: description,
  address: {
    "@type": "PostalAddress",
    streetAddress: contacto.direccion,
    addressLocality: "Juliaca",
    addressRegion: "Puno",
    postalCode: "21101",
    addressCountry: "PE",
  },
  geo: {
    "@type": "GeoCoordinates",
    latitude: -15.5,
    longitude: -70.1333,
  },
  url: siteUrl,
  telephone: contacto.telefono,
  email: contacto.email,
  priceRange: "$$",
  openingHoursSpecification: [
    {
      "@type": "OpeningHoursSpecification",
      dayOfWeek: [
        "Monday",
        "Tuesday",
        "Wednesday",
        "Thursday",
        "Friday",
        "Saturday",
        "Sunday",
      ],
      opens: "08:00",
      closes: "20:00",
    },
  ],
  areaServed: [
    { "@type": "City", name: "Juliaca" },
    { "@type": "City", name: "Puno" },
    { "@type": "City", name: "Arequipa" },
    { "@type": "City", name: "Cusco" },
  ],
  sameAs: [
    "https://facebook.com/gaivanskamacho",
    "https://instagram.com/gaivanskamacho",
  ],
  aggregateRating: {
    "@type": "AggregateRating",
    ratingValue: "4.8",
    reviewCount: "24",
  },
};

// Schema.org JSON-LD - FAQPage
const schemaFAQ = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  mainEntity: siteData.faq.map(
    (item: { pregunta: string; respuesta: string }) => ({
      "@type": "Question",
      name: item.pregunta,
      acceptedAnswer: {
        "@type": "Answer",
        text: item.respuesta,
      },
    }),
  ),
};

// Schema.org JSON-LD - WebSite (para Sitelinks)
const schemaWebsite = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  name: empresa.nombre,
  url: siteUrl,
  potentialAction: {
    "@type": "SearchAction",
    target: `${siteUrl}/?q={search_term_string}`,
    "query-input": "required name=search_term_string",
  },
};
---

<!doctype html>
<html lang="es-PE">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="keywords" content={empresa.seo.keywords} />
    <meta name="author" content={empresa.nombre} />
    <meta name="robots" content={robotsContent} />
    <meta name="generator" content={Astro.generator} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Geo Tags para búsqueda local -->
    <meta name="geo.region" content="PE-PUN" />
    <meta name="geo.placename" content="Juliaca" />
    <meta name="geo.position" content="-15.5000;-70.1333" />
    <meta name="ICBM" content="-15.5000, -70.1333" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={fullImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:site_name" content={empresa.nombre} />
    <meta property="og:locale" content="es_PE" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={fullImage} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Fonts - Carga optimizada -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap"
      rel="stylesheet"
      media="print"
      onload="this.media='all'"
    />

    <!-- Font Awesome - Carga diferida -->
    <link
      rel="preload"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      as="style"
      onload="this.onload=null;this.rel='stylesheet'"
    />
    <noscript
      ><link
        rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      /></noscript
    >

    <!-- JSON-LD Schema: LocalBusiness -->
    <script
      type="application/ld+json"
      set:html={JSON.stringify(schemaLocalBusiness)}
    />
    <!-- JSON-LD Schema: FAQPage -->
    <script type="application/ld+json" set:html={JSON.stringify(schemaFAQ)} />
    <!-- JSON-LD Schema: WebSite -->
    <script
      type="application/ld+json"
      set:html={JSON.stringify(schemaWebsite)}
    />

    <title>{title}</title>
  </head>
  <body class="font-poppins bg-dark text-white antialiased">
    <slot />

    <script>
      // Optimizado: IntersectionObserver en lugar de scroll listener
      const observerOptions = {
        root: null,
        rootMargin: "0px 0px -100px 0px",
        threshold: 0.1,
      };

      const revealObserver = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add("active");
            revealObserver.unobserve(entry.target);
          }
        });
      }, observerOptions);

      document.addEventListener("DOMContentLoaded", () => {
        const elements = document.querySelectorAll(
          ".reveal, .reveal-left, .reveal-right",
        );
        elements.forEach((el) => revealObserver.observe(el));
      });
    </script>
  </body>
</html>
